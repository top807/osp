<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_table"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.demo.osp.Order_Type">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/menu" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_above="@+id/imageButton3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:background="@drawable/seafood"
        android:onClick="starter" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="100dp"
        android:layout_height="86dp"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="182dp"
        android:layout_marginEnd="3dp"
        android:layout_toStartOf="@+id/imageButton"
        android:background="@drawable/meat"
        android:onClick="nveg" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="120dp"
        android:layout_height="73dp"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/btn_my_order"
        android:background="@drawable/vegvectrr"
        android:onClick="veg" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="118dp"
        android:layout_height="107dp"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/btn_my_order"
        android:layout_marginTop="18dp"
        android:background="@drawable/dessert_icon"
        android:onClick="dessert" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView7"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_marginStart="-5dp"
        android:layout_marginBottom="-18dp"
        android:text="海鮮"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_my_order"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="36dp"
        android:layout_toEndOf="@+id/imageButton2"
        android:background="#ffbc7a"
        android:onClick="fin_ord"
        android:text="我的訂單" />

    <Button
        android:id="@+id/btn_login_main"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-2dp"
        android:layout_marginBottom="97dp"
        android:layout_toEndOf="@+id/imageButton2"
        android:background="#ffbc7a"
        android:text="Login" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton4"
        android:layout_centerHorizontal="true"
        android:text="甜點"
        android:textColor="@android:color/black"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp"
        android:text="肉類"
        android:textColor="@android:color/black"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView8"
        android:layout_marginStart="27dp"

        android:layout_toEndOf="@+id/imageButton4"
        android:text="蔬食"
        android:textColor="@android:color/black"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="3dp"
        android:background="#771E0600"
        android:text="訪客"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />


</RelativeLayout>
